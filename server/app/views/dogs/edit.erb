<% if flash.has?(:message) %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= flash[:message] %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 box-shadow card">
    <h1>Edit a dog</h1>
    <form class="" action="/dogs/<%= @dog.id %>" method="post">
      <input type="hidden" name="_method" value="PATCH">
      <div class="form-group">
        <input type="text" class="form-control" name="name" value="<%= @dog.name %>" required>
      </div>
      <button class="btn btn-success" type="submit" name="submit">Update Dog</button>
    </form>
  </div>
</div>
